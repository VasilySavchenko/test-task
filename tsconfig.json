{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "*": ["*", "src/*"]
        },
        "target": "ES6",
        "module": "ES6",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
}
